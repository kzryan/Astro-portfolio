---
import ProjectsLayout from "../layouts/ProjectsLayout.astro"
---


<ProjectsLayout>
<div class="tab-holder">
    <a class="tab" href="/video-games">
        <button>
            <h1 class="tab-title">Video Games</h1>
        </button>
    </a>
    <a class="tab" href="/3d-modeling">
        <button>
            <h1 class="tab-title">3D Modeling</h1>
        </button>
    </a>
    <a class="tab" href="/graphic-design">
        <button>
            <h1 class="tab-title">Graphic Design</h1>
        </button>
    </a>
    <a class="tab" href="/functional-programs">
        <button>
            <h1 class="tab-title">Programs</h1>
        </button>
    </a>
</div>
<div class = "video-games-holder">
    <h2>Game 1</h2>
</div>
</ProjectsLayout>

<style>
    .tab-holder{
        position: relative;
        top:-1%;
        left: 0%;
        display: flex;
        flex-direction: row;
        justify-content: space-between; /* Spread out the elements */
        align-items: center; /* Vertically center the elements */
        font-family: "Onest", sans-serif;
    }

    .tab{
        flex: 1;
        font-family: "Onest", sans-serif;
        background-color: black;     
    }

    h1{
        font-family: "Onest", sans-serif;
        color:#EE4C7C
    }

    button {
        height: 100%;
        width: 100%;
        border-radius: 5%;
        border-top: 3px solid #EE4C7C;
        border-right: 3px solid #EE4C7C;
        border-bottom: none;
        border-left: none;
        background-color: #1a1a1a99;
    }

</style>