---
import Layout from "../layouts/Layout.astro"
---


<Layout>
    <div class="about-container">
        <div class="about-head">
            <img src="src/assets/temp_headshot.png" alt="Headshot of Kate Ryan" class="headshot" />
        </div>
        <div class="about-sec">
            <h1>Education</h1>
        </div>
        <div class="about-sec">
            <h1>Experience</h1>
        </div>
    </div>
</Layout>

<style>
    .about-container {
        display:flex;

    }

    .headshot {
        position: sticky;
        top:0%;
        left:0%;
        -webkit-filter: drop-shadow(3px 2px 0 #EE4C7C)
                  drop-shadow(-2px -2px 0 #EE4C7C);
        filter: drop-shadow(3px 1px 0 #EE4C7C) 
                drop-shadow(-2px -2px 0 #EE4C7C);

    }

    .about-sec h1{
        color: #E3AFBC;
    }

    .about-sec {
        margin: 2%;
    }

</style>