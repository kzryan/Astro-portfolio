---
export interface Props {
  columns: string[];
  rows: { [key: string]: any }[];
}
const { columns, rows } = Astro.props as Props;
---

<table>
  <thead>
    <tr>
      {columns.map(column => (
        <th>{column}</th>
      ))}
    </tr>
  </thead>
  <tbody>
    {rows.map(row => (
      <tr>
        {columns.map(column => (
          <td>{row[column]}</td>
        ))}
      </tr>
    ))}
  </tbody>
</table>

<style>

    table {
    width: 100%;
    border-collapse: collapse;
    }

    th, td {
    border: 1px solid #ddd;
    padding: 8px;
    }

    th {
    background-color: #f2f2f2;
    }

    tr:nth-child(even) {
    background-color: #f9f9f9;
    }
</style>