---
import { MessageCircleHeart } from '@lucide/astro';
---

<header class="header">
    <div class = "header-content">
        <div class="socials">
            <a href="https://github.com/kzryan" target="_blank">
                <img src="src/assets/github-icon.png" alt="github" height="40" width="40">
            </a>
            <a href="https:/www.linkedin.com/in/kzryan98" target="_blank">
                <img src="src/assets/linkedin.png" alt="linkedin" height="40" width="40">
            </a>
            <a href="https://www.codewars.com/users/kzryan" target="_blank">
                <img src="src/assets/codewars.svg" alt="codewars" height="40" width="40">
            </a>
        </div>
        <div class="name">Kate Ryan</div>
        <nav class="navigation">
            <a href="/about">About</a>
            <a href="/projects">Projects</a>
            <a href="/services">Services</a>
            <a href="/contact">Contact</a>
        </nav>
    </div>
</header>
<style>
    .header {
        width: 100%;
        position: sticky; /* Make the header sticky */
        top: 0; /* Stick to the top of the viewport */
        padding: 1rem 0;
        z-index: 1000; /* Ensure the header is above other content */
        font-family: "Onest", sans-serif;
        font-size: x-large;
    }
    .name, .logo{
        color:rgb(255, 180, 180);
        font-weight:bold;
    }

    .header-content {
        display: flex;
        flex-direction: row;
        justify-content: space-between; /* Spread out the elements */
        align-items: center; /* Vertically center the elements */
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .navigation {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1rem; 
    }

    .socials {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 1rem;
    }

    .socials a:hover {
        color: #EE4C7C;
    }

    .navigation a {
        color: #9A1750;
        text-decoration: none;
    }
    /* mouse over link */
    .navigation a:hover {
        color: #EE4C7C;
    }
    
    .name{
        margin-right: 3%;
        color:black;
        text-decoration: underline;
    }


</style>