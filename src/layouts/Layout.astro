.grid-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(min-content, 1fr));
  min-height: 100vh;
  width: 100%;
}

.header {
  grid-row: 1;
}

.page {
  grid-row: 2;
  margin: 0 2%;
  border-radius: 5px;
  background-color: #1a1a1a99;
  border: 3px solid #EE4C7C;
  position: relative;
  padding: 2% 2%;
}

.footer {
  grid-row: 3;
  /* Add any additional styles for the footer */
}

.heart-icon {
  margin-left: 1%;
}
</style>
