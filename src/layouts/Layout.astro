---
import '../styles/global.css';
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
	<Head />
	<title>Kate Ryan</title>
	</head>
	<body class="body">
	<div class="grid-container">
		<Header class="header" />
		<div class="page">
		<slot />
		</div>
	</div>
	<Footer class="footer" />
	</body>
</html>

<style>
html,
body {
  margin: 0;
  width: 100%;
  height: 100%;
}
