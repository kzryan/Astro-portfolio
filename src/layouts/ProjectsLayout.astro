---
import '../styles/global.css';
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
	<Head />
	<title>Kate Ryan</title>
	</head>
	<body class="body">
		<Header class="header" />
    <div class="page">
      <div class="tab-holder"> <slot name="tabs" /> </div>
        <div class="content">
          <slot /> <!-- Default slot -->
        </div>
	  </div>
	  <Footer class="footer" />
	</body>
</html>

<style>
/*
