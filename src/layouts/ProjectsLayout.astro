.header {
  grid-row: 1;
}

.tab-holder{
  position:relative;
  top:10%;
  display: flex;
  flex-direction: row;
  flex-flow: row wrap;
  justify-content:center; /* Spread out the elements */
  align-items: center;
  font-family: "Onest", sans-serif;
  background-color: #e37eab00;
  z-index: 1;
}

.page {
  grid-row: 2;
  position: relative;
  margin: 0 2%;
  border-radius: 5px;
  position: relative;
  z-index: 2;
}

.content {
  margin: 0 2%;
  border-radius: 5px;
  background-color: #e37eab;
  border: 3px solid #EE4C7C;
  padding: 10% 5%;
  z-index: 0;
}

.footer {
  grid-row: 3;
  /* Add any additional styles for the footer */
}

.heart-icon {
  margin-left: 1%;
}
</style>
